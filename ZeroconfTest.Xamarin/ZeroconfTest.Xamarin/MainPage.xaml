<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZeroconfTest.Xam.MainPage">

  <StackLayout>
    <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
      <Label Text="Zeroconf Test!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
    </Frame>
    <Button Text="Browse" Pressed="Browse_Pressed" />
    <Entry x:Name="Protocol" Placeholder="_printer._tcp.local." />
    <Button Text="Resolve" Pressed="Resolve_Pressed" />
    <Button Text="Clear" Pressed="Clear_Pressed" />
    <ScrollView VerticalOptions="Fill">
      <Label x:Name="Output" />
    </ScrollView>
  </StackLayout>

</ContentPage>

